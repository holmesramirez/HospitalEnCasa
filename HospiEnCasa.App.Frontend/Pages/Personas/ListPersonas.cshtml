@page
@model HospiEnCasa.App.Frontend.Pages.ListPersonasModel
@{
    int pacienteId = 3;
}

<h1>Lista pacientes de corazon</h1>
<table class="table">
    @foreach (var persona in Model.ListaPersonas)
    {
        <tr>
            <td>@persona.Nombre</td>
            <td>@persona.Apellidos</td>
           
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Signos/List" asp-route-saludoId="@pacienteId">
                <i class="fas fa-address-book fa-lg" aria-hidden="true">Signos</i>
                </a>
            </td>
        </tr>
    }

</table>
